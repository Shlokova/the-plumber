{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "esnext",
    "allowJs": true,
    "baseUrl": "."
  },

  "exclude": ["node_modules", "./dist/"],
  "include": ["declarations.d.ts", "src/**/*.ts"]
}
